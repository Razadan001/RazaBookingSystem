@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1 class="display-4">Welcome to Hub Booking System</h1>
    <p class="lead">Book your preferred workspace with ease. Find and reserve available hubs for your meetings or events.</p>
    <hr class="my-4">
    <div>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">Register</a>
        <a asp-controller="Account" asp-action="Login" class="btn btn-secondary btn-lg">Login</a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/welcome-image.jpg" alt="Welcome Image" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h2>Features</h2>
            <ul>
                <li>Search and book available hubs</li>
                <li>View your upcoming bookings</li>
                <li>Manage your account and preferences</li>
            </ul>
        </div>
    </div>
</div>

